@using BlazingPizza.Models
@using System.Globalization

@foreach (var pizza in Pizzas)
{
    <div class="pizza-item" style="border:1px solid #ccc; padding:10px; margin-bottom:10px; max-width:300px;">
        <img src="@pizza.ImageUrl" alt="@pizza.Name" style="width:100%; height:auto;"/>
        <h3>@pizza.Name</h3>
        <p>@pizza.Description</p>
        <p><strong>@pizza.Price.ToString("C", new CultureInfo("id-ID"))</strong></p>
        <button @onclick="() => OnPizzaSelected.InvokeAsync(pizza)">Order</button>
    </div>
}

@code {
    [Parameter]
    public List<Pizza> Pizzas { get; set; } = new();

    [Parameter]
    public EventCallback<Pizza> OnPizzaSelected { get; set; }
}
